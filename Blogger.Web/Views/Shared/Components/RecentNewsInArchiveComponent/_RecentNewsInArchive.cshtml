@using Blogger.Core.Convertors
@model IEnumerable<Blogger.Core.DTOs.News.ShowRecentNewsViewModel>

<div class="single_widget recent_widget" dir="ltr">
    <h4 class="text-uppercase pb-20">آخرین خبرهای ارسالی</h4>
    <div class="active-recent-carusel">
       @foreach (var item in Model)
       {
           <div class="item">
               <img src="/NewsImages/@item.ImageName" alt="" class="thumbnail" style="height: 300px; width: 300px;">
               <p class="mt-20 title text-uppercase"><a href="/News/ShowNews/@item.NewsId">@item.Title</a></p>
               <p>تاریخ : @item.CreateDate.ToShamsi()</p>
           </div>
       }
       
    </div>
</div>